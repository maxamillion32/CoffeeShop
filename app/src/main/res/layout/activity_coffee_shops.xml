<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guest.cofeshop.CoffeeShopsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/coffebackground"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@+id/locationEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationEditText"
        android:padding="10dp"
        android:hint="Enter Zip Code For Nearest Coffee"
        android:background="#91555445"
        android:inputType="number"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Enter A Zip Code "
        android:elegantTextHeight="true"
       />

</RelativeLayout>
